<%@ Page Language="C#" MasterPageFile="MasterPage.Master" AutoEventWireup="True" CodeBehind="UserConsume.aspx.cs" Inherits="SocoShop.Web.Admin.UserConsume" %><%@ Register Namespace="SkyCES.EntLib" Assembly="SkyCES.EntLib" TagPrefix="SkyCES"%><%@ Import Namespace="SocoShop.Common" %><%@ Import Namespace="SocoShop.Entity" %><asp:Content ID="MasterContent" ContentPlaceHolderID="ContentPlaceHolder" runat="server">	<script language="javascript" src="/Admin/js/calendar.js" type="text/javascript"></script><div class="position"><img src="/Admin/Style/Images/PositionIcon.png"  alt=""/>会员分析</div>	<div class="listBlock">    <ul>        <li><a href="UserCount.aspx">数量分析</a></li>        <li><a href="UserStatus.aspx">状态分析</a></li>        <li><a href="UserActive.aspx">活跃度分析</a></li>        <li class="listOn"><a href="UserConsume.aspx">消费分析</a></li>       </ul>	</div><div class="pageMark">	    <div class="statisticsSearch">		    交易时间：<SkyCES:TextBox CssClass="input" ID="StartDate" runat="server" RequiredFieldType="日期时间"  onfocus="cdr.show(this);"/> 到 <SkyCES:TextBox CssClass="input" ID="EndDate" runat="server" RequiredFieldType="日期时间"  onfocus="cdr.show(this);"/> 		    用户名：<SkyCES:TextBox ID="UserName" CssClass="input" runat="server"  />            性别：<asp:DropDownList ID="Sex" runat="server"></asp:DropDownList>            排序：<asp:DropDownList ID="UserConsumeType" runat="server"><asp:ListItem Value="RechargeCount">充值次数从多到小</asp:ListItem><asp:ListItem Value="RechargeMoney">充值金额从大到小</asp:ListItem>            <asp:ListItem Value="ApplyCount">提现次数从多到小</asp:ListItem><asp:ListItem Value="ApplyMoney">提现金额从大到小</asp:ListItem>            <asp:ListItem Value="OrderCount">订单次数从多到小</asp:ListItem><asp:ListItem Value="OrderMoney">订单金额从大到小</asp:ListItem></asp:DropDownList>	        <asp:Button CssClass="button" ID="SearchButton" Text=" 搜 索 " runat="server"  OnClick="SearchButton_Click" />    </div>       <table class="listTable" cellpadding="0" cellpadding="0">        <tr class="listTableHead">	        <td style="width:5%">ID</td>	        <td style="width:15%; text-align:left;text-indent:8px;">用户</td>	        <td style="width:5%">性别</td>	        <td style="width:10%">充值次数</td>	        <td style="width:15%">充值金额</td>	        <td style="width:10%">提现次数</td>       	        <td style="width:15%">提现金额</td> 	        <td style="width:10%">订单次数</td> 	        <td style="width:15%">订单金额</td>                </tr>        <asp:Repeater ID="RecordList" runat="server">	        <ItemTemplate>	                     <tr class="listTableMain" onmousemove="changeColor(this,'#FFFDD7')" onmouseout="changeColor(this,'#FFF')">			        <td style="width:5%"><%# Eval("ID") %></td>			        <td style="width:15%; text-align:left;text-indent:8px;"><%# Eval("UserName") %></td>			        <td style="width:5%"><%#EnumHelper.ReadEnumChineseName<SexType>(Convert.ToInt32(Eval("Sex")))%></td>	                <td style="width:10%"><%# Eval("RechargeCount")%></td>	                <td style="width:15%"><%#Eval("RechargeMoney")%></td>	                <td style="width:10%"><%#Eval("ApplyCount")%></td>			        <td style="width:15%;"><%#Eval("ApplyMoney")%></td>			        <td style="width:10%"><%#Eval("OrderCount")%></td> 	 			        <td style="width:15%"><%#Eval("OrderMoney")%></td> 	        		        </tr>            </ItemTemplate>        </asp:Repeater>    </table>    <div class="listPage"><SkyCES:CommonPager ID="MyPager" runat="server" /></div>    <div class="clear"></div>    <ul class="search" style="margin-top:10px">        <li class="title">说明：该项只统计成功的交易，不包含未完成的交易以及失败的交易！！</li>    </ul></div></asp:Content>