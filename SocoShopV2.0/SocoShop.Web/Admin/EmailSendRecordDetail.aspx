<%@ Page Language="C#" MasterPageFile="MasterPage.Master" AutoEventWireup="True" CodeBehind="EmailSendRecordDetail.aspx.cs" Inherits="SocoShop.Web.Admin.EmailSendRecordDetail" %><%@ Import Namespace="SocoShop.Business" %><%@ Import Namespace="SocoShop.Common" %><%@ Import Namespace="SocoShop.Entity" %><%@ Import Namespace="SkyCES.EntLib" %><asp:Content ID="MasterContent" ContentPlaceHolderID="ContentPlaceHolder" runat="server"><style type="text/css">.emailRight{border-left: 1px solid #eee;padding-left: 10px;	margin-left: -1px;overflow:hidden;width:600px; line-height:22px;table-layout:fixed; word-break: break-all;}</style><div class="position"><img src="/Admin/Style/Images/PositionIcon.png"  alt=""/>邮件发送记录详细</div><div class="add">    <ul>		<li class="left">邮件标题：</li>		<li class="right"><%=emailSendRecord.Title%></li>	</ul>		<ul>		<li class="left">内容：</li>		<li class="emailRight"><%=emailSendRecord.Content%></li>	</ul>	<ul>		<li class="left">备注：</li>		<li class="right"><%=emailSendRecord.Note%></li>	</ul>	<ul>		<li class="left">发送状态：</li>		<li class="right"><%= EnumHelper.ReadEnumChineseName<SendStatus>(emailSendRecord.SendStatus)%></li>	</ul>	<ul>		<li class="left">添加时间：</li>		<li class="right"><%=emailSendRecord.AddDate%></li>	</ul>	<%if (emailSendRecord.SendStatus == (int)SendStatus.Finished){ %>	<ul>		<li class="left">发送时间：</li>		<li class="right"><%=emailSendRecord.SendDate%></li>	</ul>	<%} %>	<ul>		<li class="left">是否系统邮件：</li>		<li class="right"><%=ShopCommon.GetBoolText(emailSendRecord.IsSystem)%></li>	</ul>	<ul>		<li class="left">是否统计用户打开：</li>		<li class="right"><%=ShopCommon.GetBoolText(emailSendRecord.IsStatisticsOpendEmail)%></li>	</ul>	<ul>		<li class="left">Email地址：</li>		<li class="emailRight"><%=emailSendRecord.EmailList%></li>	</ul>	<%if (emailSendRecord.IsStatisticsOpendEmail == (int)BoolType.True && emailSendRecord.SendStatus == (int)SendStatus.Finished){ %>	<ul>		<li class="left">打开邮件的<br />Email地址：</li>		<li class="emailRight"><%=emailSendRecord.OpenEmailList%></li>	</ul>	<%} %>	</div></asp:Content>