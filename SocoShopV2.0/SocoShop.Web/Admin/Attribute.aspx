<%@ Page Language="C#" MasterPageFile="MasterPage.Master" AutoEventWireup="True" CodeBehind="Attribute.aspx.cs" Inherits="SocoShop.Web.Admin.Attribute" %><%@ Register Namespace="SkyCES.EntLib" Assembly="SkyCES.EntLib" TagPrefix="SkyCES"%><%@ Import Namespace="SocoShop.Common" %><%@ Import Namespace="SocoShop.Entity" %><%@ Import Namespace="SocoShop.Business" %><asp:Content ID="MasterContent" ContentPlaceHolderID="ContentPlaceHolder" runat="server"><div class="position"><img src="/Admin/Style/Images/PositionIcon.png"  alt=""/>属性列表</div>	<ul class="search">    <li>属性组：<asp:DropDownList ID="AttributeClass" runat="server" onchange="readAttribute(this.value)"/></li></ul><table class="listTable" cellpadding="0" cellpadding="0">    <tr class="listTableHead">	<td style="width:5%">ID</td>	<td style="width:15%; text-align:left;text-indent:8px;">属性</td>	<td style="width:15%">属性组名</td>      	<td style="width:15%">录入方式</td>     	<td style="width:30%">可选值</td>       	<td style="width:15%">管理</td>       	<td style="width:5%">选择</td>        </tr><asp:Repeater ID="RecordList" runat="server">	<ItemTemplate>	             	<tr class="listTableMain" onmousemove="changeColor(this,'#FFFDD7')" onmouseout="changeColor(this,'#FFF')">			<td style="width:5%"><%# Eval("ID") %></td>			<td style="width:15%; text-align:left;text-indent:8px;"><%# Eval("Name") %></td>			<td style="width:15%"><%# AttributeClassBLL.ReadAttributeClassCache(Convert.ToInt32(Eval("AttributeClassID"))).Name%></td>           			<td style="width:15%"><%#EnumHelper.ReadEnumChineseName<InputType>(Convert.ToInt32(Eval("InputType"))) %></td>   			<td style="width:30%"><%# Eval("InputValue") %>&nbsp;</td>           			<td style="width:15%;">			    <a href='?Action=Up&AttributeClassID=<%=attributeClassIDAspx %>&ID=<%#Eval("ID") %>'><img src="Style/Images/moveUp.gif" alt="上移" title="上移" /></a> 			    <a href='?Action=Down&AttributeClassID=<%=attributeClassIDAspx %>&ID=<%#Eval("ID") %>'><img src="Style/Images/moveDown.gif" alt="下移" title="下移" /></a>			    <a href='Attribute.aspx?ID=<%# Eval("ID") %>&AttributeClassID=<%=attributeClassIDAspx %>'><img src="Style/Images/edit.gif" alt="修改" title="修改" /></a> 			    			</td>			<td style="width:5%"><input type="checkbox" name="SelectID" value="<%# Eval("ID") %>" /></td> 	        		</tr>        </ItemTemplate></asp:Repeater></table><div class="action">        <input type="button"  value=" 添 加 " class="button"  onclick="window.location.href='Attribute.aspx?AttributeClassID=<%=attributeClassIDAspx%>'"/>&nbsp;<asp:Button CssClass="button" ID="DeleteButton" Text=" 删 除 " OnClientClick="return checkSelect()" runat="server"  OnClick="DeleteButton_Click"/>&nbsp;<input type="checkbox" name="All" onclick="selectAll(this)" />全选/取消</div><div class="position"><img src="/Admin/Style/Images/PositionIcon.png"  alt=""/>属性<%=GetAddUpdate()%></div><div class="add">		<ul>		<li class="left">属性名称：</li>		<li class="right"><SkyCES:TextBox ID="Name" CssClass="input" runat="server" Width="400px" /></li>	</ul>	<ul>		<li class="left">录入方式：</li>		<li class="right"><asp:RadioButtonList ID="InputType" RepeatDirection="Horizontal" runat="server" onclick="showValue()"></asp:RadioButtonList></li>	</ul>	<ul id="InputValueDiv" >		<li class="left">可选值列表<br />（值之间","隔开）：</li>		<li class="right"><SkyCES:TextBox ID="InputValue" CssClass="input" runat="server" Width="400px" TextMode="MultiLine" Height="50px" /></li>	</ul></div><div class="action">    <asp:Button CssClass="button" ID="SubmitButton" Text=" 确 定 " runat="server"  OnClick="SubmitButton_Click" /></div><script language="javascript" type="text/javascript">    function readAttribute(value) {        window.location.href = "Attribute.aspx?AttributeClassID=" + value;    }    function showValue(){        var inputType=getRadioValue(os("name",globalNamePrefix+"InputType"));        var obj=o("InputValueDiv");        if(parseInt(inputType)>=3){                    obj.style.display="";        }        else{            obj.style.display="none";        }    }    showValue();</script></asp:Content>