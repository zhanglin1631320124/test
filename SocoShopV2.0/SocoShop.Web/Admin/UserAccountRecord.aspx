<%@ Page Language="C#" MasterPageFile="MasterPage.Master" AutoEventWireup="True" CodeBehind="UserAccountRecord.aspx.cs" Inherits="SocoShop.Web.Admin.UserAccountRecord" %><%@ Register Namespace="SkyCES.EntLib" Assembly="SkyCES.EntLib" TagPrefix="SkyCES"%><%@ Import Namespace="SocoShop.Entity" %><asp:Content ID="MasterContent" ContentPlaceHolderID="ContentPlaceHolder" runat="server"><div class="position"><img src="/Admin/Style/Images/PositionIcon.png"  alt=""/>帐户明细列表</div>	<ul class="search">    <li>        可用积分：<%=user.PointLeft%>；已消费金额：<%=user.MoneyUsed %> 元 ；账户余额：<%=user.MoneyLeft %> 元    </li></ul><div class="listBlock">    <ul>        <li <%if(accountType==(int)AccountType.Money){%>class="listOn"<%} %>><a href="UserAccountRecord.aspx?UserID=<%=user.ID %>&AccountType=<%=(int)AccountType.Money %>">资金账户</a></li>        <li <%if(accountType==(int)AccountType.Point){%>class="listOn"<%} %>><a href="UserAccountRecord.aspx?UserID=<%=user.ID %>&AccountType=<%=(int)AccountType.Point %>">积分账户</a></li>    </ul>	</div><table class="listTable" cellpadding="0" cellpadding="0">    <tr class="listTableHead">	<td style="width:5%">ID</td>	<td style="width:20%; text-align:left;text-indent:8px;">时间</td>	<td style="width:35%">备注</td>  	<td style="width:10%">IP</td> 	<td style="width:10%">收入</td>      	<td style="width:10%">支出</td>  	   	<td style="width:10%">剩余</td>        </tr>    <%if(accountType==(int)AccountType.Money){%>    <% foreach(UserAccountRecordInfo userAccountRecord in userAccountRecordList){           moneyLeft += userAccountRecord.Money;%>    <tr class="listTableMain" onmousemove="changeColor(this,'#FFFDD7')" onmouseout="changeColor(this,'#FFF')">		<td style="width:5%"><%=userAccountRecord.ID%></td>		<td style="width:20%; text-align:left;text-indent:8px;"><%=userAccountRecord.Date%></td>		<td style="width:35%;text-align:left;"><%=userAccountRecord.Note%></td>          <td style="width:10%"><%=userAccountRecord.IP%></td> 			<td style="width:10%"><%if (userAccountRecord.Money > 0) {%><%=userAccountRecord.Money%><%} %>&nbsp;</td>              <td style="width:10%"><%if (userAccountRecord.Money< 0) {%><%=-userAccountRecord.Money%><%} %>&nbsp;</td> 	         <td style="width:10%"><%=moneyLeft%></td>              	</tr>	<%} %><%}else{ %>    <% foreach(UserAccountRecordInfo userAccountRecord in userAccountRecordList){           pointLeft += userAccountRecord.Point;%>    <tr class="listTableMain" onmousemove="changeColor(this,'#FFFDD7')" onmouseout="changeColor(this,'#FFF')">		<td style="width:5%"><%=userAccountRecord.ID%></td>		<td style="width:20%; text-align:left;text-indent:8px;"><%=userAccountRecord.Date%></td>		<td style="width:35%;text-align:left;"><%=userAccountRecord.Note%></td>          <td style="width:10%"><%=userAccountRecord.IP%></td> 			<td style="width:10%"><%if (userAccountRecord.Point > 0) {%><%=userAccountRecord.Point%><%} %>&nbsp;</td>              <td style="width:10%"><%if (userAccountRecord.Point< 0) {%><%=-userAccountRecord.Point%><%} %>&nbsp;</td> 	         <td style="width:10%"><%=pointLeft%></td>               	</tr>	<%} %><%} %></table><div class="listPage"><SkyCES:CommonPager ID="MyPager" runat="server" /></div><div class="action">        <input type="button"  value=" 添 加 " class="button"  onclick="window.location.href='UserAccountRecordAdd.aspx?UserID=<%=userID %>'"/></div></asp:Content>